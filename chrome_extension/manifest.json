{
    "manifest_version": 2,
    "name": "Summarizer Extension",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
            "http://*/*",
            "https://*/*"
            ],
            "js": [
                "document_disabbreviation.js", 
                "document_mastication.js", 
                "index.js", 
                "module_administration.js",
                "sentence_analysis.js",
                "sentence_parsing.js",
                "sentence_reconstitution.js",
                "sentence_reordering.js"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "smashicons.jpg"
    }
}